            android:layout_alignBottom="@id/ivCardBottom"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">


            <LinearLayout
                android:id="@+id/llCardBottom"
                android:layout_width="369dp"
                android:layout_height="450dp"
